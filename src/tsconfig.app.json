{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "paths": {
      "@core/*": ["./app/core/*"],
      "@data/*": ["./app/data/*"],
      "@layout/*": ["./app/layout/*"],
      "@modules/*": ["./app/modules/*"],
      "@shared/*": ["./app/shared/*"]
    }
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts",
    "../node_modules/@nebular/**/*.spec.ts"
  ],
  "include": [
    "../src/*.ts",
    "../src/**/*.ts",
    "../node_modules/@nebular/**/*.ts"
  ],
}
